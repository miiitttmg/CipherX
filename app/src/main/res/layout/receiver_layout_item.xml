<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiverpic"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@null"
        app:civ_border_color="@color/primary_purple"
        app:civ_border_width="@dimen/_2sdp" />

    <TextView
        android:id="@+id/txtmsgreceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxWidth="@dimen/_200sdp"
        android:layout_margin="@dimen/_7sdp"
        android:layout_toRightOf="@id/receiverpic"
        android:background="@drawable/receiver_shape"
        android:fontFamily="@font/spartanregular"
        android:padding="@dimen/_5sdp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_time"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textSize="@dimen/_8sdp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtmsgreceiver"
        android:text="1/1/20211"
        />

</RelativeLayout>