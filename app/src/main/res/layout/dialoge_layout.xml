<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180sdp"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/shape_dialoge"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/logoutlogo_trans"
        app:tint="#FF0606" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/spartanregular"
        android:gravity="center"
        android:text="Are you sure you want to \n Log Out?"
        android:textSize="@dimen/_15sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/noBtn_dialoge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/dialoge_btn"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:text="No" />

        <TextView
            android:id="@+id/yesBtn_dialoge"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/dialoge_btn"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Yes" />

    </LinearLayout>
    >


</LinearLayout>